{
    "compilerOptions": {
        "lib": [
            "ESNext"
        ],
        "strict": true,
        "module": "CommonJS",
        "alwaysStrict": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "target": "ES6",
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "declarationDir": "./dist/types",
        "allowSyntheticDefaultImports": true
        
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*"
    ]
}